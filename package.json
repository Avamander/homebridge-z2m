{
  "displayName": "Homebridge Zigbee2mqtt",
  "name": "homebridge-z2m",
  "version": "0.0.2",
  "description": "Expose your Zigbee devices to HomeKit with ease, by integrating zigbee2mqtt with Homebridge.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/itavero/homebridge-z2m.git"
  },
  "bugs": {
    "url": "https://github.com/itavero/homebridge-z2m/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">0.4.53"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "mqtt": "^4.1.0",
    "color-convert": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "homebridge": "^1.1.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "version-changelog": "^3.1.1",
    "changelog-verify": "^1.1.2"
  }
}
